@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{var tutorItems = CurrentPage.TutorRepositories.First().TutorItems;}
@if (tutorItems.HasValue())
{
  <section class="grey section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="section-title text-center">
            <h4>Meet Our Tutors</h4>
            <p>Just a few of the expert tutors here at ICS Learn</p>
          </div>
        </div>
      </div>
      <div class="row" id="tutor">
        <div class="col-md-12">
          <div class="content-widget">
            <div class="team-members row">
              @foreach (var item in tutorItems)
              {
                <div class=" widget col-md-2 col-sm-6 col-xs-12" itemscope itemtype="http://schema.org/Person">
                  <a href="@item.Url">
                    <div class="team">
                      <img src="@item.GetCropUrl("image", "TutorImageCrop" )" alt="@item.Name" class="img-responsive wow fadeInUp" />
                      <div class="team-hover-content">
                        <h5 itemprop="name">@item.tutorName</h5>
                        <br />
                        <a href="@item.Url">Read More <i class="fa fa-angle-right"></i></a>
                      </div>
                    </div>
                  </a>
                </div>
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
}