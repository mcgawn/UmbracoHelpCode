@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
  var teamItems = CurrentPage.TeamRepositories.First().TeamItems;
  <section class="white section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="section-title text-center">
            <h4>Meet Our Team</h4>
            <p>Meet some of the professionals here at ICS learn</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="content-widget">
            <div class="team-members row">
              @foreach (var item in teamItems)
              {
                <div class="col-md-3 col-sm-6 col-xs-12">
                  <div class="team">
                    <img src="@item.image" alt="@item.image" class="img-responsive wow fadeInUp" />
                    <div class="team-hover-content">
                      <h5>@item.subHeading</h5>
                      <span>@item.jobTitle</span>
                      <p>@item.Description</p>
                      <div class="social">
                        <a href="@item.link" title="LinkedIn"><i class="fa fa-linkedin"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
              }
            </div>
            <br />
          </div>
        </div>
      </div>
    </div>
  </section>
}